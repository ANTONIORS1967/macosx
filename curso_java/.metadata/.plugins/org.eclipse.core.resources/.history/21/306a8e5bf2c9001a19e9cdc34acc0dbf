package classe;

import java.util.Date;

public class Data {

	int dia;
	int mes;
	int ano;
	
	Data(){
	Date  d1 = new Date();
	}
	
	Data(int diaInicio,int mesInicio,int anoInicio){
		dia = diaInicio;
		mes = mesInicio;
		ano = anoInicio;
		
	}
	
	String obterDataFormatada() {
		return  String.format("%d/%d/%d", dia,mes,ano);
	}
	
		void imprimerDataFormatada() {
		System.out.println(obterDataFormatada());
	}
}
